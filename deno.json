{
  "tasks": {
    "run": "deno run --allow-net=api.websitecarbon.com,api.github.com src/cli.ts"
  },
  "lint": {
    "include": [
      "./"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "explicit-function-return-type"
      ]
    }
  },
  "fmt": {
    "include": [
      "./"
    ],
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve"
  }
}