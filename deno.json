{
  "lint": {
    "files": {
      "include": [
        "./"
      ]
    },
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "fmt": {
    "files": {
      "include": [
        "./"
      ]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  },
  "imports": {
    "std/": "https://deno.land/std@0.175.0/"
  },
  "tasks": {
    "run": "deno run --allow-net=api.websitecarbon.com,api.github.com src/cli.ts"
  }
}
